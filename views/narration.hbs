{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
<div class="col-lg-6" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading" id="edit" style="display:none">
                    <i class="fa fa-bell fa-fw"></i>Edit Narration
                </div>
                <div class="panel-heading" id="add">
                    <i class="fa fa-bell fa-fw"></i>Add Narration
                    {{#if err}}
                        <div class="alert alert-danger">
                            <strong>{{err}}</strong>
                        </div>
                    {{/if}}
                    {{#if errors}}
                             <div class="alert alert-danger">
                                <strong>{{errors}}</strong>
                            </div>
                    {{/if}}
                </div>
                <div class="panel-body">
                    <div class="alert alert-success brandsuccess" style="display:none;"></div>
                    <div class="alert alert-danger branddanger" style="display:none;"></div>
                     <form method="POST" action="/narration/narration_add" enctype="" id="narration">
                    <div class="row">
                         <div class="col-sm-12">
                        <label>Narration:</label>
                            <input class="form-control narration_name" placeholder="Narration Name" name="narration_name" type="text">
                            <span class="form_error">Please Enter narration Name </span>
                    </div> 
                </div>
                <div class="row"> 
                         <div class="col-sm-12">
                        <label>Type:</label>
                        <select name="type" id="type" class="form-control type">
                            <option value="">Select...</option>
                            <option value="All">All</option>
                            <option value="Contact Form">Contact Form</option>
                            <option value="Contract Document">Contract Document</option>
                            <option value="Delivery Entry">Delivery Entry</option>
                            <option value="Payment Entry">Payment Entry</option>
                            <option value="Cash/Bank Book">Cash/Bank Book</option>
                            <option value="Journal Entry">Journal Entry</option>
                            <option value="Specification">Specification</option>
                          </select>
                        <span class="form_error">Please Enter narration Name </span>
                           
                    </div>  
                </div>
                <br/>
                <button type="submit" name="save" class="btn btn-success">Submit</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </form>
             <form method="POST" action=""  class="edit_narration" id="edit_narration" style="display:none;">
                    <div class="row">
                         <div class="col-sm-12">
                        <label>Narration:</label>
                        <input class="form-control narration_name" placeholder="Narration Name" name="narration_name" type="text">
                        <span class="form_error">Please Enter narration Name </span>
                           
                    </div>  
                </div>
                <div class="row"> 
                         <div class="col-sm-12">
                        <label>Type:</label>
                        <select name="type" id="type" class="form-control type">
                            <option value="">Select...</option>
                            <option value="All">All</option>
                            <option value="Contact Form">Contact Form</option>
                            <option value="Contract Document">Contract Document</option>
                            <option value="Delivery Entry">Delivery Entry</option>
                            <option value="Payment Entry">Payment Entry</option>
                            <option value="Cash/Bank Book">Cash/Bank Book</option>
                            <option value="Journal Entry">Journal Entry</option>
                            <option value="Specification">Specification</option>
                          </select>
                        <span class="form_error">Please Enter narration Name </span>
                           
                    </div>  
                </div>
                <br/>
                <button type="submit" name="save" class="btn btn-success">Update</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </form>
        </div>
      </div>
      </div>
        <div class="col-lg-6" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i>Narration LIST
                </div>
                <div class="table-responsive">
                    <table class="product_detail_table">
                        <thead>
                        <tr>
                            <th>Sno.</th>
                            <th>Narration Name</th>
                            <th>Type</th>
                            <th>Edit</th>
                            <th>Delete</th>
                      </tr>  
                        </thead>
                        <tbody>
                                {{#each narration as |value key|}}
                                <tr>
                                    <td>{{sum @index 1}}</td>
                                    <td>{{this.narration_name}}</td>
                                    <td>{{this.type}}</td>
                                    <td><a href="javascript:void(0);"  class="edit_narration_btn" data-id="{{this._id}}"><i class="fa fa-pencil"></i></i></a></td>
                                    <td><a href="javascript:void(0);" class="delete-narration" data-id="{{this._id}}"><i class="fa fa-trash-o" style="color:red;"></a></td>
                               </tr>
                              {{/each}}  
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                </div>
        </div>  
        </div>
        {{> footer}}