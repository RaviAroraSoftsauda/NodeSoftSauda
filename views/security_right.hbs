{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
<div class="col-lg-6" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i>ADD Group
                    {{#if err}}
                        <div class="alert alert-danger">
                            <strong>{{err}}</strong>
                        </div>
                    {{/if}}
                    {{#if errors}}
                             <div class="alert alert-danger">
                                <strong>{{errors}}</strong>
                            </div>
                    {{/if}}
                </div>
                <div class="panel-body">
                    <div class="alert alert-success brandsuccess" style="display:none;"></div>
                    <div class="alert alert-danger branddanger" style="display:none;"></div>
                     <form method="POST" action="/security_right/add" enctype="" id="security_add">
                    <div class="row"> 
                        <div class="col-sm-12">
                          <label>SNO:</label>
                            <input class="form-control" placeholder="SNO" name="sno" type="text">
                    </div> 
                         <div class="col-sm-12">
                          <label>Right Name:</label>
                            <input class="form-control right_name" placeholder="Right Name" name="right_name" type="text">
                            <span class="form_error">Please Enter Group Name </span>
                    </div> 
                     <div class="col-sm-12">
                          <label>Right Description:</label>
                            <input class="form-control right_desc" placeholder="Right Description" name="right_desc" type="text">
                            <span class="form_error">Please Enter Group Name </span>
                    </div>
                </div>
                <br/>
                <button type="submit" name="save" class="btn btn-success">Submit</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </form>
             <form method="POST" action=""  class="edit_security" id="edit_security" style="display:none;">
                    <div class="row"> 
                         <div class="col-sm-12">
                          <label>SNO:</label>
                            <input class="form-control sno" placeholder="SNO" name="sno" type="text">
                    </div> 
                         <div class="col-sm-12">
                          <label>Right Name:</label>
                            <input class="form-control right_name" placeholder="Right Name" name="right_name" type="text">
                    </div> 
                     <div class="col-sm-12">
                          <label>Right Description:</label>
                            <input class="form-control right_desc" placeholder="Right Description" name="right_desc" type="text">
                    </div>  
                </div>
                <br/>
                <button type="submit" name="save" class="btn btn-success">Update</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </form>
        </div>
      </div>
      </div>
        <div class="col-lg-6" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i>Group LIST
                </div>
                <div class="table-responsive">
                    <table class="product_detail_table">
                        <thead>
                        <tr>
                            <th>Sno.</th>
                            <th>Right Name</th>
                            <th>Right Description</th>
                            <th>Edit</th>
                            <th>Delete</th>
                      </tr>  
                        </thead>
                        <tbody>
                            {{#each security as |value key|}}
                                <tr>
                                    <td>{{sum @index 1}}</td>
                                    <td>{{this.right_name}}</td>
                                    <td>{{this.right_desc}}</td>
                                    <td><a href="javascript:void(0);"  class="edit_security_btn" data-id="{{this._id}}"><i class="fa fa-pencil"></i></i></a></td>
                                    <td><a href="javascript:void(0);" class="delete-security" data-id="{{this._id}}"><i class="fa fa-trash-o" style="color:red;"></a></td>
                               </tr>
                               {{/each}}  
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                </div>
        </div>  
        </div>
        {{> footer}}