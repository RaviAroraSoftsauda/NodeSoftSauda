                    {{#if err}}
                        <div class="alert alert-danger">
                            <strong>{{err}}</strong>
                        </div>
                    {{/if}}
                    {{#if errors}}
                             <div class="alert alert-danger">
                                <strong>{{errors}}</strong>
                            </div>
                    {{/if}}
        <div class="col-lg-12" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-list"></i>ADMIN LIST
                </div>
                <div class="table-responsive">
                    <table class="product_detail_table">
                        <thead>
                        <tr>
                            <th>SNO</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User Name</th>
                            <th>Email Id</th>
                            <th>Update</th>
                            <th>Delete</th>
                      </tr>  
                        </thead>
                        <tbody>
                                 {{#each userright as |value key|}}
                                    <tr>
                                        <td>{{sum @index 1}}</td>
                                        <td>{{this.first_name}}</td>
                                        <td>{{this.last_name}}</td>
                                        <td>{{this.usrnm}}</td>
                                        <td>{{this.emailid}}</td>
                                        <td><a href="/userright/admin_list_update/{{value._id}}"><i class="fa fa-pencil"></i></a></td>
                                        <td><a href="/userright/delete_admin/{{value._id}}" onclick="return confirm('Are you sure want to delete.');"><i class="fa fa-trash-o" style="color:red;"></i></a></td>
                                    </tr>
                                    {{/each}}    
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                </div>
        </div>  
        </div>
        {{> footer}}