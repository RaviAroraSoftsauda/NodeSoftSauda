{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
            <a href="/party/party_add" style="color:white"><h1 class="btn btn-primary pull-left" style="margin-bottom: -9px;margin-left: 12px;">Add Party</h1></a>
                    {{#if err}}
                        <div class="alert alert-danger">
                            <strong>{{err}}</strong>
                        </div>
                    {{/if}}
                    {{#if errors}}
                             <div class="alert alert-danger">
                                <strong>{{errors}}</strong>
                            </div>
                    {{/if}}
        <div class="col-lg-12" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i>PARTY LIST
                </div>
                <div class="table-responsive">
                    <table class="product_detail_table">
                        <thead>
                        <tr>
                            <th>Sno.</th>
                            <th>Party Name</th>
                            <th>Address</th>
                            <th>Area Name</th>
                            <th>City Name</th>
                            <th>Pin-Code</th>
                            <th>Credit Limits</th>
                            <th>PAN</th>
                            <th>GSTIN</th>
                            <th>Phone(office)</th>
                            <th>Phone(Resi.)</th>
                            <th>FSSAI</th>
                            <th>FAX</th>
                            <th>Mobile No.(sms)</th>
                            <th>Edit</th>
                            <th>Delete</th> 
                      </tr>  
                        </thead>
                        <tbody>
                                 {{#each party as |value key|}}
                                    <tr>
                                        <td>{{sum @index 1}}</td>
                                        <td>{{this.party_name}}</td>
                                        <td>{{this.address1}}</td>
                                        <td>{{this.area_name}}</td>
                                        <td>{{this.city_name.city_name}}</td>
                                        <td>{{this.pin_code}}</td>
                                        <td>{{this.credit_limit}}</td>
                                        <td>{{this.pan_no}}</td>
                                        <td>{{this.gstin}}</td>
                                        <td>{{this.phone_ofc}}</td>
                                        <td>{{this.phone_resi}}</td>
                                        <td>{{this.fssai}}</td>
                                        <td>{{this.fax}}</td>
                                        <td>{{this.mob_no}}</td>
                                        <td><a href="/party/party_list_update/{{value._id}}"><i class="fa fa-pencil"></i></a></td>
                                        <td><a href="/party/delete_party/{{value._id}}" onclick="return confirm('Are you sure want to delete.');"><i class="fa fa-trash-o" style="color:red;"></i></a></td>
                                    </tr>
                                    {{/each}}    
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                </div>
        </div>  
        </div>
        {{> footer}}