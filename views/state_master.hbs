{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
<div class="col-lg-6" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading" id="edit" style="display:none">
                    <i class="fa fa-bell fa-fw"></i>EDIT STATE
                </div>
                <div class="panel-heading" id="add">
                    <i class="fa fa-bell fa-fw"></i>ADD STATE
                    {{#if err}}
                        <div class="alert alert-danger">
                            <strong>{{err}}</strong>
                        </div>
                    {{/if}}
                    {{#if errors}}
                             <div class="alert alert-danger">
                                <strong>{{errors}}</strong>
                            </div>
                    {{/if}}
                </div>
                <div class="panel-body">
                    <div class="alert alert-success brandsuccess" style="display:none;"></div>
                    <div class="alert alert-danger branddanger" style="display:none;"></div>
                    <form method="POST" action="/state_master/state_add" enctype="" id="addstate">
                    <div class="row"> 
                   <div class="col-sm-12 ">
                    <label>State Name:</label>
                    <input class="form-control state_name" placeholder="State Name"name="state_name" type="text">
                    <span class="form_error">Please Enter State Name</span>
                 </div> 
                </div>
                 <div class="row"> 
                         <div class="col-sm-12">
                        <label>State Code:</label>
                        <input class="form-control state_code" placeholder="State Code"name="state_code" type="text">
                        <span class="form_error">Please Enter State Code</span>
                    </div> 
                   <div class="col-sm-12 ">
                     <label>State Capital:</label>
                    <input class="form-control state_capital" placeholder="State Name"name="state_capital" type="text">
                    <span class="form_error">Please Enter State Capital</span>
                 </div> 
                </div>
                <br/>
                <button type="submit" name="save" class="btn btn-success">Submit</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </form>
             <form method="POST" action=""  class="edit_state" id="edit_state" style="display:none;">
                    <div class="row">
                   <div class="col-sm-12 ">
                    <label>State Name:</label>
                    <input class="form-control state_name" value="" name="state_name" type="text">
                    <span class="form_error">Please Enter State Name</span>
                 </div> 
                </div>
                 <div class="row"> 
                         <div class="col-sm-12">
                        <label>State Code:</label>
                        <input class="form-control state_code"  value="" name="state_code" type="text">
                        <span class="form_error">Please Enter State Code</span>
                    </div> 
                   <div class="col-sm-12 ">
                     <label>State Capital:</label>
                    <input class="form-control state_capital" value="" name="state_capital" type="text">
                    <span class="form_error">Please Enter State Capital</span>
                 </div> 
                </div>
                <br/>
                <button type="submit" name="save" class="btn btn-success">Update</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </form>
        </div>
      </div>
      </div>
        <div class="col-lg-6" style="margin-top: 22px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i>STATE LIST
                </div>
                <div class="table-responsive">
                    <table class="product_detail_table">
                        <thead>
                        <tr>
                            <th>Sno.</th>
                            <th>State Name</th>
                            <th>State Code</th>
                            <th>State Capital</th>
                            <th>Edit</th>
                            <th>Delete</th>
                      </tr>  
                        </thead>
                        <tbody>
                            {{#each state_master as |value key|}}
                            <tr>
                                <td>{{sum @index 1}}</td>
                                <td>{{this.state_name}}</td>
                                <td>{{this.state_code}}</td>
                                <td>{{this.state_capital}}</td>
                                <td><a href="javascript:void(0);"  class="edit_state_btn" data-id="{{this._id}}"><i class="fa fa-pencil"></i></i></a></td>
                                <td><a href="javascript:void(0);" class="delete-state" data-id="{{this._id}}"><i class="fa fa-trash-o" style="color:red;"></a></td>
                           </tr>
                            {{/each}}  
                           
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                </div>
        </div>  
        </div>
        {{> footer}}